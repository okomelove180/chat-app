<div class="side-bar_header">
  <div class="side-bar_header_name">
    <%= link_to current_user.name, edit_user_path(current_user) %>
  </div>
  <div class="making-chat-button">
    <a href="/rooms/new">チャットを作成する</a>
  </div>
</div>
<div class="side-bar_chat-list">
   <% current_user.rooms.each do |room| %>
    <div class="room">
      <div class="room-name">
        <%= link_to room.name, room_messages_path(room) %>
      </div>
    </div>
  <% end %>
</div>

