<div class="chat_header">
  <div class="room-title">hogefuga</div>
  <div class="ending-chat-button">
    <a href="#">チャットを終了する</a>
  </div>
</div>
<div class="chat_message-area">
  <div class="chat_message-box">
    <div class="chat_message_l1">
      <div class="chat_message-area_name">Tom</div>
      <div class="chat_message-area_date">2020/3/31(Wed) 12:43:30</div>
    </div>
    <div class="chat_message_l2">
        <div class="chat_message-area_comment">おはよう</div>
    </div>
  </div>
  <div class="chat_message-box">
    <div class="chat_message_l1">
      <div class="chat_message-area_name">Sim</div>
      <div class="chat_message-area_date">2020/3/31(Wed) 12:43:35</div>
    </div>
    <div class="chat_message_l2">
        <div class="chat_message-area_comment">おはようぅぅぅ</div>
    </div>
  </div>
</div>
<%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f|%>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>