<div class="chat_message-box">
  <div class="chat_message_l1">
    <div class="chat_message-area_name">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= message.user.name %>
    </div>
    <div class="chat_message-area_date">
      <!-- 投稿した時刻を出力する -->
      <%= l message.created_at %>
    </div>
  </div>
  <div class="lower-message">
    <div class="chat_message-area_comment">
      <!-- 投稿したメッセージ内容を記述する -->
       <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
    </div>
  </div>
</div>